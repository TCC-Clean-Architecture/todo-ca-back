{
    "name": "2do4u-backend-with-clean-architecture",
    "version": "1.0.0",
    "description": "Software criado para fins de pesquisa de TCC",
    "main": "index.js",
    "scripts": {
        "coverage": "nyc report --reporter html",
        "mocha": "cross-env NODE_ENV=test mocha --timeout=3000 --exit --require ts-node/register -r tsconfig-paths/register src/**/*.test.ts",
        "test": "cross-env NODE_ENV=test nyc --reporter html --reporter text mocha --timeout=3000 --exit --require ts-node/register -r tsconfig-paths/register src/**/*.test.ts",
        "dev": "cross-env NODE_ENV=dev nodemon --watch src/** --ext ts,json --ignore src/**/*.test.ts --exec ts-node -r tsconfig-paths/register src/index.ts",
        "start": "cross-env NODE_ENV=dev node dist/index.js",
        "lint": "eslint src/ --ext .ts,.js",
        "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
        "build:watch": "tsc && (concurrently \"tsc -w\" \"tsc-alias -w\")"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "mongodb": "^6.1.0"
    },
    "devDependencies": {
        "@faker-js/faker": "^8.0.2",
        "@types/bcrypt": "^5.0.0",
        "@types/chai": "^4.3.6",
        "@types/cors": "^2.8.14",
        "@types/express": "^4.17.17",
        "@types/jsonwebtoken": "^9.0.3",
        "@types/mocha": "^10.0.1",
        "@types/sinon": "^10.0.16",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^6.6.0",
        "@typescript-eslint/parser": "^6.6.0",
        "chai": "^4.3.8",
        "concurrently": "^8.2.1",
        "eslint": "^8.48.0",
        "eslint-config-standard-with-typescript": "^39.0.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-n": "^16.0.2",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "mocha": "^10.2.0",
        "nodemon": "^3.0.1",
        "nyc": "^15.1.0",
        "prettier": "^3.0.3",
        "sinon": "^15.2.0",
        "supertest": "^6.3.3",
        "ts-node": "^10.9.1",
        "tsc-alias": "^1.8.8",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.2.2"
    }
}
